<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardBackgroundColor="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="420dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="420dp"
                android:background="@drawable/home_button"
                android:layout_marginTop="20dp"
                android:elevation="5dp"
                android:layout_margin="16dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/poppins"
                    android:padding="15dp"
                    android:text="KATEGORI"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/HistoryKategori"
                    android:layout_width="245dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="50sp"
                    android:textSize="18sp"
                    android:hint="motor/mobil"
                    android:singleLine="true"
                    app:layout_constraintStart_toStartOf="@+id/textView"
                    app:layout_constraintTop_toTopOf="@+id/textView" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="80dp"
                    android:fontFamily="@font/poppins"
                    android:padding="15dp"
                    android:text="Type Kendaraan"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/HistoryTypeKendaraan"
                    android:layout_width="348dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="124sp"
                    android:textSize="18sp"
                    android:hint="ex:miyo 200cc"
                    android:singleLine="true"
                    app:layout_constraintStart_toStartOf="@+id/textView"
                    app:layout_constraintTop_toBottomOf="@+id/nama_latin_ikan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="160dp"
                    android:fontFamily="@font/poppins"
                    android:padding="15dp"
                    android:text="Keperluan"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/HistoryKeperluan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="205dp"
                    android:text="isi dari checkbox"
                    tools:layout_editor_absoluteY="199dp" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="238dp"
                    android:fontFamily="@font/poppins"
                    android:padding="15dp"
                    android:text="Tanggal Sewa"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/HistoryTanggalSewa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:textSize="18sp"
                    android:layout_marginTop="284dp"
                    android:text="xx/xx/xxx - xx/xx/xxx"
                    tools:layout_editor_absoluteY="199dp" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="312dp"
                    android:fontFamily="@font/poppins"
                    android:padding="15dp"
                    android:text="Kapasitas Bensin"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/HistoryBensin"
                    android:layout_width="348dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="358sp"
                    android:textSize="18sp"
                    android:hint="kapasitas bensin x liter"
                    android:singleLine="true"
                    tools:layout_editor_absoluteX="10dp"
                    tools:layout_editor_absoluteY="555dp" />

                <ImageButton
                    android:id="@+id/btnupdate"
                    android:layout_width="55dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="325dp"
                    android:layout_marginRight="90dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/editdetail"
                    android:src="@drawable/ic_baseline_edit"
                    android:elevation="5dp" />

                <ImageButton
                    android:id="@+id/btndelete"
                    android:layout_width="55dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="325dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:elevation="5dp"
                    android:background="@drawable/deletedetail"
                    android:src="@drawable/ic_baseline_restore_from_trash_24"/>

            </RelativeLayout>

            <!--            <ImageView-->
            <!--                android:layout_width="180dp"-->
            <!--                android:layout_height="180dp"-->
            <!--                android:layout_marginRight="-35dp"-->
            <!--                android:src="@drawable/cupang_biru_putihh"-->
            <!--                android:layout_marginTop="-20dp"-->
            <!--                android:elevation="5dp"-->
            <!--                android:layout_alignParentRight="true"/>-->
        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>